{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    {% if app.request.attributes.get('id') is null %}
        <h3>Add your wish!</h3>
    {% else %}
        <h3>Modify your wish!</h3>
    {% endif %}

    {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.author) }}
        {{ form_row(form.description) }}
        {{ form_row(form.category) }}
        <button type="submit" class="btn btn-primary btn-lg px-4">{{ app.request.attributes.get('id') is null ? 'Add' : 'Update' }}</button>
    {{ form_end(form) }}

{% endblock %}

